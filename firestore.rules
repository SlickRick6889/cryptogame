rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Configuration: Allow clients to read the game config, but not write it.
    match /config/game {
      allow read: if true;
      allow write: if false;
    }

    // Games: Allow reads for real-time updates, but no writes (Cloud Functions only)
    match /games/{gameId} {
      allow read: if true;
      allow write: if false;
    }

    // Payments: Disallow all client-side access.
    match /payments/{paymentId} {
      allow read, write: if false;
    }

    // Users: Allow read/write access for user stats (future feature)
    match /users/{userId} {
      allow read, write: if true;
    }
  }
}
